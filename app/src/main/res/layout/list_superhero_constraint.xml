<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_list_superhero_constraint_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_view_list_superhero_constraint_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingBottom="12dp"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/image_view_list_superhero_constraint_picture"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_view_list_superhero_constraint_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_view_list_superhero_constraint_name"
        app:layout_constraintBottom_toBottomOf="@id/image_view_list_superhero_constraint_picture"/>

</android.support.constraint.ConstraintLayout>